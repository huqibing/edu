<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<!-- 创建数据源对象，连接数据库 -->
	<bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
			<property name="driverClass" value="com.mysql.jdbc.Driver"></property>
			<property name="jdbcUrl" value="jdbc:mysql:///train"></property>
			<property name="user" value="root"></property>
			<property name="password" value="1234"></property>
	</bean>
<!-- 创建sqlSessionFactory对象，需要给此对象设置数据源及mybatis配置文件 -->
	<bean id="sqlSessionFactoryBean" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource"></property>
		<property name="configLocation" value="classpath:mybatis.xml"></property>
	</bean>
<!-- 创建mapper扫描器，创建dao包中的所有dao对象 -->
	<bean id="mapper" class="org.mybatis.spring.mapper.MapperScannerConfigurer">
	 	<property name="sqlSessionFactoryBeanName" value="sqlSessionFactoryBean"></property>
	 	<property name="basePackage" value="gzu.rg.dao"></property>
	 </bean>
<!-- 指定service包，后面使用注解的方式创建service对象 -->
	<context:component-scan base-package="gzu.rg.service"></context:component-scan>

</beans>